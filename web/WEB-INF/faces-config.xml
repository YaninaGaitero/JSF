<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
<navigation-rule>
        <!-- se consideran todas las peticiones -->
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>logueado</from-outcome>
            <to-view-id>faces/Menu.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>faces/Home.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>faces/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>faces/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>altaprod</from-outcome>
            <to-view-id>faces/AltaProductos.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>modifprod</from-outcome>
            <to-view-id>faces/BajaYModifProds.xhtml</to-view-id>
        </navigation-case> 
        <navigation-case>
            <from-outcome>histcompras</from-outcome>
            <to-view-id>faces/VerHistorialMio.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>abmusers</from-outcome>
            <to-view-id>faces/ABMUsuarios.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <managed-bean>
        <managed-bean-name>CasoLogIn</managed-bean-name>
        <managed-bean-class>Controladora.ControladoraLogin</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>
